<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CadastroDeEventos_.TelaCadastro"
             Title="Resumo do Evento">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <Label Text="Resumo do Evento" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Frame Padding="12" BorderColor="#CCC">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding Nome, StringFormat='Nome: {0}'}" />
                    <Label Text="{Binding Evento, StringFormat='Evento: {0}'}" />
                    <Label Text="{Binding Participantes, StringFormat='Participantes: {0}'}" />
                    <Label Text="{Binding CheckIn, StringFormat='Check-in: {0:dd/MM/yyyy}'}" />
                    <Label Text="{Binding CheckOut, StringFormat='Check-out: {0:dd/MM/yyyy}'}" />
                    <Label Text="{Binding DuracaoDias, StringFormat='Duração: {0} dia(s)'}" />
                    <Label Text="{Binding CustoPorParticipante, StringFormat='Custo por pessoa: R$ {0:F2}'}" />
                    <Label Text="{Binding CustoTotal, StringFormat='Custo total: R$ {0:F2}'}" FontAttributes="Bold" TextColor="DarkBlue"/>
                </VerticalStackLayout>
            </Frame>

            <Button Text="Voltar" Clicked="Voltar_Clicked" BackgroundColor="DarkBlue" TextColor="White" HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


